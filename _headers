# Netlify headers for optimal caching and performance
# This file controls cache behavior for static assets

# Cache Next.js static files (JS, CSS) - immutable for 1 year
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache static assets from public folder
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts - immutable for 1 year
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# Cache images with long expiry
/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.avif
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - shorter cache with revalidation
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# API routes - no cache
/api/*
  Cache-Control: no-store, no-cache, must-revalidate
